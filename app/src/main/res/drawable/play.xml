<?xml version="1.0" encoding="utf-8"?>
<vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="100dp"
    android:height="100dp"
    android:viewportHeight="12"
    android:viewportWidth="12">

    <!-- Translate the canvas, then rotate, then scale, then draw the play icon. -->
    <group android:scaleX="1.3" android:pivotX="6" android:pivotY="6">
        <group android:rotation="0" android:pivotX="6" android:pivotY="6">
            <group android:translateX="0">
                <!-- This path draws an orange triangular play icon. -->
                <path
                    android:name="play_path"
                    android:fillColor="#FFFFFF"
                    android:pathData="M 4,2.5 L 4,9.5 L 9.5,6 Z"/>
            </group>
        </group>
    </group>

</vector>